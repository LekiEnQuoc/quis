local arrow = getCompassArrow()
if arrow then
    local origin = arrow.Position
    local dir = arrow.CFrame.LookVector * 1000
    print("Origin:", origin, "Direction:", dir)
    
    -- tạo part hiển thị tia
    local part = Instance.new("Part")
    part.Anchored = true
    part.CanCollide = false
    part.Size = Vector3.new(0.2, 0.2, (dir.Magnitude))
    part.CFrame = CFrame.new(origin + dir/2, origin + dir)
    part.Color = Color3.new(1,0,0)
    part.Parent = workspace
end
